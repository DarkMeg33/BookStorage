@using BookStorage.Extensions
@section Styles
{
    <link rel="stylesheet" href="~/css/sign-in-up.css" />
    @Html.HideHeader()
    @Html.HideFooter()
}

@section Scripts
{
    <script src="~/js/sign-in-up.js"></script>
}

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <div id="sign-in-up-tab" class="ui two item secondary pointing menu">
            <a class="item active" data-tab="sign-in">Sign in</a>
            <a class="item" data-tab="sign-up">Sign up</a>
        </div>
        <div class="ui attached tab" data-tab="sign-in">
            <form class="ui large form" id="sign-in-form" onsubmit="return false">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="at icon"></i>
                            <input type="text" name="email" placeholder="E-mail address"/>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Password"/>
                        </div>
                    </div>
                    <div class="ui fluid large secondary submit button"
                         id="sign-in-btn">
                        Sign in
                    </div>
                </div>
                <div class="ui error message"></div>
            </form>
        </div>
        <div class="ui attached tab" data-tab="sign-up">
            <form class="ui large form" id="sign-up-form" onsubmit="return false">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="username" placeholder="Username" />
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="at icon"></i>
                            <input type="text" name="email" placeholder="E-mail address"/>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Password"/>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="confirm-password" placeholder="Confirm password" />
                        </div>
                    </div>
                    <div class="ui fluid large secondary submit button" 
                         id="sign-up-btn">
                        Sign up
                    </div>
                </div>
                <div class="ui error message"></div>
            </form>
        </div>
    </div>
</div>